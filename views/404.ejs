<%- include('includes/head.ejs') %>

<style>
    .error-container {
        text-align: center;
        padding: 100px 0;
    }
    
    .error-code {
        font-size: 120px;
        color: #717fe0;
        font-weight: bold;
        margin-bottom: 20px;
    }
    
    .error-message {
        font-size: 24px;
        color: #333;
