        display: inline-block;
        padding: 15px 30px;
        background-color: #717fe0;
        color: white;
        text-decoration: none;
        border-radius: 25px;
        transition: all 0.3s;
    }
    
    .back-home:hover {
        background-color: #5b69c2;
        transform: translateY(-2px);
    }
</style>

<body class="animsition">
    <%- include('includes/header.ejs') %>

