<%- include('../includes/head.ejs') %>

<body class="animsition">

    <%- include("../includes/header.ejs")%>
    <!-- Title page -->
    <section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url(images/iphone-xr1.jpg);">
        <h2 class="ltext-105 cl0 txt-center" style='color: aquamarine'>
            iPhone
            </h1>
    </section>

    <!-- Product -->
    <div class="bg0 m-t-23 p-b-140">
        <div class="container">
            <div class="flex-w flex-sb-m p-b-52">
                <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                    <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
                        All Products
                    </button>
                    <% for (let category of categories) { %>
                    <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".<%= category %>">
                        <%= category %>
                    </button>
                    <% } %>
                </div>
            </div>

            <div class="row isotope-grid">
                <% for (let product of products) { %>
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item <%= product.category %>">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <img src="<%= product.image %>" alt="<%= product.productname %>">

                            <a href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1"
                                data-id="<%= product._id %>"
                                data-name="<%= product.productname %>"
                                data-price="<%= product.price %>"
                                data-description="<%= product.description %>"
                                data-img="<%= product.image %>"
                                data-quantity="<%= product.quantity %>">
                                Quick View
                            </a>
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l">
                                <a href="/product/<%= product._id %>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    <%= product.productname %>
                                </a>

                                <span class="stext-105 cl3">
                                    $<%= product.price %>
                                </span>
                                
                                <span class="stext-105 cl3 mt-2">
                                    In stock: <%= product.quantity %>
                                </span>
                            </div>

                            <div class="block2-txt-child2 flex-r p-t-3">
                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04" src="images/icons/icon-heart-01.png" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="images/icons/icon-heart-02.png" alt="ICON">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../includes/footer.ejs') %>

    <!-- Back to top -->
    <div class="btn-back-to-top" id="myBtn">
        <span class="symbol-btn-back-to-top">
            <i class="zmdi zmdi-chevron-up"></i>
        </span>
    </div>

    <%- include('../includes/cart-r-side.ejs') %>
    <%- include('../includes/modal.ejs') %>
    <%- include('../includes/end.ejs') %>